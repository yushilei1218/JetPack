<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#55000000"
    android:orientation="horizontal">


    <LinearLayout
        android:id="@+id/pick_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#FFF"
        android:orientation="horizontal">

        <com.test.shileiyu.jetpack.common.widget.ItemPickerView
            android:id="@+id/province_pick"
            style="@style/Item_Pick_Style"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <com.test.shileiyu.jetpack.common.widget.ItemPickerView
            android:id="@+id/city_pick"
            style="@style/Item_Pick_Style"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <com.test.shileiyu.jetpack.common.widget.ItemPickerView
            android:id="@+id/district_pick"
            style="@style/Item_Pick_Style"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_above="@+id/pick_layout"
        android:background="#FFF">

        <TextView
            android:id="@+id/confirm_pick"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:padding="5dp"
            android:text="чбошод" />
    </RelativeLayout>

</RelativeLayout>
