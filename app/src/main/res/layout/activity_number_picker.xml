<?xml version="1.0" encoding="utf-8"?>
<com.test.shileiyu.jetpack.common.widget.LogLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/log_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.NumberPickerActivity">

    <TextView
        android:id="@+id/number_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffadad"
        android:padding="10dp"
        android:text="点击，这是一个三级联动异步请求的NumberPick"
        android:textSize="24sp" />

    <Button
        android:id="@+id/show_Gird"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="showGrid with Ani" />

    <Button
        android:id="@+id/show_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="show TV with Ani" />

    <TextView
        android:id="@+id/text_tv"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#2d73ff"
        android:gravity="center"
        android:text="这是一个TextView"
        android:visibility="gone" />

    <LinearLayout
        android:background="#ffb7b7"
        android:id="@+id/grid_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <com.test.shileiyu.jetpack.common.widget.NGridView
            android:id="@+id/n_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="3" />
    </LinearLayout>


    <ListView
        android:id="@+id/n_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</com.test.shileiyu.jetpack.common.widget.LogLinearLayout>