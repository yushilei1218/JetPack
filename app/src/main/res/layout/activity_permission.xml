<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.PermissionActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="这是一个Activity" />

    <Button
        android:id="@+id/btn_aaa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activity 内触发申请权限" />

    <Button
        android:id="@+id/btn_bbb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AndPermission" />

    <TextView
        android:id="@+id/tv_aaa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:id="@+id/container_fg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>